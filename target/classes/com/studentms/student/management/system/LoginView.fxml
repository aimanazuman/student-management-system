<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!-- StackPane centers the login form in the window -->
<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.studentms.student.management.system.LoginViewController"
           style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">
    
    <!-- Login form container -->
    <VBox alignment="CENTER" spacing="25" maxWidth="400" 
          style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40;">
        
        <!-- Application Title -->
        <VBox alignment="CENTER" spacing="5">
            <Label text="Student Management System" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
            <Label text="Please login to continue" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" />
        </VBox>
        
        <!-- Login Form -->
        <VBox spacing="15">
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username:" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <TextField fx:id="usernameField" promptText="Enter your username" 
                          style="-fx-font-size: 14px; -fx-padding: 10;">
                    <tooltip>
                        <Tooltip text="Enter your username" />
                    </tooltip>
                </TextField>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password:" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" 
                              style="-fx-font-size: 14px; -fx-padding: 10;"
                              onAction="#handleLogin">
                    <tooltip>
                        <Tooltip text="Enter your password" />
                    </tooltip>
                </PasswordField>
            </VBox>
            
            <!-- Role Selection -->
            <VBox spacing="5">
                <Label text="Login as:" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <ComboBox fx:id="roleComboBox" promptText="Select your role" 
                         style="-fx-font-size: 14px;"
                         prefWidth="320">
                    <tooltip>
                        <Tooltip text="Select your role in the system" />
                    </tooltip>
                </ComboBox>
            </VBox>
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" textFill="red" wrapText="true" 
                   style="-fx-font-size: 12px;" />
            
            <!-- Login Button -->
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                    maxWidth="Infinity" 
                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5;">
                <tooltip>
                    <Tooltip text="Click to login" />
                </tooltip>
            </Button>
            
            <!-- Additional Options -->
            <HBox spacing="10" alignment="CENTER">
                <CheckBox fx:id="rememberMeCheckBox" text="Remember me" 
                         style="-fx-font-size: 12px;" />
            </HBox>
            
        </VBox>
        
        <!-- Footer -->
        <VBox alignment="CENTER" spacing="5">
            <Separator prefWidth="320" />
            <Label text="Default Credentials:" style="-fx-font-size: 11px; -fx-text-fill: #95a5a6; -fx-font-weight: bold;" />
            <Label text="Admin: admin / admin123" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;" />
            <Label text="Coordinator: coordinator / coord123" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;" />
            <Label text="Student: Use your email and student code (e.g., ST001)" style="-fx-font-size: 10px; -fx-text-fill: #7f8c8d;" />
        </VBox>
        
    </VBox>
    
</StackPane>