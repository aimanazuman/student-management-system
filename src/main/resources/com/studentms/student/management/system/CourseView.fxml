<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.studentms.student.management.system.CourseViewController">
    
    <!-- TOP region: Header -->
    <top>
        <VBox styleClass="header" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Course Management" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Label text="Manage courses and curriculum" textFill="#ecf0f1" style="-fx-padding: 5 0 0 0;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- CENTER region: Main content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            
            <!-- Course Form -->
            <VBox spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5;">
                
                <Label text="Course Information" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <GridPane hgap="15" vgap="12">
                    
                    <!-- Course Code -->
                    <Label text="Course Code:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="courseCodeField" promptText="e.g., CS101" 
                               GridPane.columnIndex="1" GridPane.rowIndex="0" 
                               prefWidth="250">
                        <tooltip>
                            <Tooltip text="Enter unique course code" />
                        </tooltip>
                    </TextField>
                    
                    <!-- Course Name -->
                    <Label text="Course Name:" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <GridPane.margin>
                            <Insets left="20" />
                        </GridPane.margin>
                    </Label>
                    <TextField fx:id="courseNameField" promptText="e.g., Introduction to Programming" 
                               GridPane.columnIndex="3" GridPane.rowIndex="0"
                               prefWidth="300">
                        <tooltip>
                            <Tooltip text="Enter course name" />
                        </tooltip>
                    </TextField>
                    
                    <!-- Credits -->
                    <Label text="Credits:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Spinner fx:id="creditsSpinner" 
                            GridPane.columnIndex="1" GridPane.rowIndex="1"
                            prefWidth="250"
                            editable="true">
                        <tooltip>
                            <Tooltip text="Select credit hours (1-6)" />
                        </tooltip>
                    </Spinner>
                    
                    <!-- Description -->
                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextArea fx:id="descriptionArea" promptText="Enter course description" 
                              wrapText="true" prefRowCount="3"
                              GridPane.columnIndex="1" GridPane.rowIndex="2" 
                              GridPane.columnSpan="3">
                        <tooltip>
                            <Tooltip text="Enter detailed course description" />
                        </tooltip>
                    </TextArea>
                    
                </GridPane>
                
                <!-- Action buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="addCourseButton" text="Add Course" onAction="#handleAddCourse" 
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="120" />
                    
                    <Button fx:id="updateCourseButton" text="Update Course" onAction="#handleUpdateCourse" 
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="120" />
                    
                    <Button fx:id="deleteCourseButton" text="Delete Course" onAction="#handleDeleteCourse" 
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="120" />
                    
                    <Button fx:id="clearCourseButton" text="Clear Form" onAction="#handleClearForm" 
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="120" />
                    
                    <Button text="Back to Students" onAction="#handleBackToStudents"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20;"
                            prefWidth="150" />
                </HBox>
            </VBox>
            
            <!-- Courses Table -->
            <VBox spacing="10">
                <Label text="All Courses" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <TableView fx:id="courseTable" VBox.vgrow="ALWAYS" 
                           style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn fx:id="courseIdColumn" text="ID" prefWidth="60" />
                        <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="150" />
                        <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="350" />
                        <TableColumn fx:id="courseCreditsColumn" text="Credits" prefWidth="100" />
                        <TableColumn fx:id="courseDescriptionColumn" text="Description" prefWidth="400" />
                    </columns>
                </TableView>
            </VBox>
            
        </VBox>
    </center>
    
    <!-- BOTTOM region: Status bar -->
    <bottom>
        <HBox style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label fx:id="statusLabel" text="Ready" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
        </HBox>
    </bottom>
    
</BorderPane>